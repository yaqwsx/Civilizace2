{
  "name": "django_tailwind",
  "description": "",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-js": "copy-files-from-to",
    "build-css": "npm run build-clean && npm run build-postcss && npm run build-cleancss",
    "build-postcss": "postcss --config . --map false --output ../static/css/styles.min.css ./src/styles.scss",
    "build-cleancss": "cleancss -o ../static/css/styles.min.css ../static/css/styles.min.css",
    "build-clean": "rimraf ../css",
    "start": "watch 'npm run build-postcss' ./src"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "autoprefixer": "^9.7.0",
    "clean-css-cli": "^4.3.0",
    "copy-files-from-to": "^2.1.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-scss": "^2.0.0",
    "rimraf": "^2.7.1",
    "tailwindcss": "^1.1.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "chart.js": "^2.9.3",
    "d3": "^5.16.0",
    "d3plus": "^1.9.8",
    "dagre-d3": "^0.6.4",
    "flatpickr": "^4.6.3"
  },
  "copyFiles": [
    {
      "from": "node_modules/chart.js/dist/Chart.bundle.min.js",
      "to": "../static/js/Chart.bundle.min.js"
    },
    {
      "from": "node_modules/@fortawesome/fontawesome-free/svgs/**",
      "to": "../static/svgs"
    },
    {
      "from": "node_modules/@fortawesome/fontawesome-free/webfonts/*",
      "to": "../static/webfonts"
    },
    {
      "from": "node_modules/flatpickr/dist/flatpickr.min.js",
      "to": "../static/js/flatpickr.min.js"
    },
    {
      "from": "node_modules/flatpickr/dist/l10n/cs.js",
      "to": "../static/js/flatpickr.cs.js"
    },
    {
      "from": "node_modules/flatpickr/dist/flatpickr.min.css",
      "to": "../static/css/flatpickr.min.css"
    },
    {
      "from": "node_modules/dagre-d3/dist/*",
      "to": "../static/js/"
    },
    {
      "from": "node_modules/d3/*.js",
      "to": "../static/js/"
    }
  ]
}
